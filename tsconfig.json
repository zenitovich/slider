{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    //добавлено для реализации методов get и set без указания их в конструкторе
    "strictPropertyInitialization": false,
    "baseUrl": ".",
    "paths": {
      "~core/*": [
        "src/core/*"
      ],
      "~modules/*": [
        "src/modules/*"
      ],
      "~styles/*": [
        "src/styles/*"
      ],
      "~/*": [
        "src/*"
      ],
      "~constants/*": [
        "src/constants/*"
      ],
      "@core/*": [
        "src/core/*"
      ],
      "@modules/*": [
        "src/modules/*"
      ],
      "@styles/*": [
        "src/styles/*"
      ],
      "@/*": [
        "src/*"
      ],
      "@constants/*": [
        "src/constants/*"
      ],
      "@images/*": [
        "src/images/*"
      ]
    }
  },
  "include": [
    "src",
    "public"
  ]
}